<Page xmlns:my="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    x:Class="GroupNStegafy.View.EmbedMessagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GroupNStegafy.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Height="900"
    Width="1600">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <CommandBar>
            <AppBarToggleButton Icon="Home" Label="Home" Click="homeButton_click"/>
            <CommandBar.Content>
                <TextBlock Text="Embed Image" Margin="12,14" FontSize="22"/>
            </CommandBar.Content>
        </CommandBar>
        <Image x:Name="sourceImageDisplay" HorizontalAlignment="Left" Height="199" Margin="63,119,0,0"
               VerticalAlignment="Top" Width="215" />
        <Button x:Name="openbutton" Content="Open" HorizontalAlignment="Left" Margin="128,444,0,0"
                VerticalAlignment="Top" Click="openButton_Click" />
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Margin="213,444,0,0"
                VerticalAlignment="Top" Click="saveButton_Click" />

    </Grid>
</Page>
